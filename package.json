{
  "name": "renpy-vscode",
  "displayName": "Ren'Py",
  "description": "Extension for VSCode designed for Ren'Py developers",
  "version": "0.0.1",
  "publisher": "DRincs-Productions",
  "repository": "https://github.com/DRincs-Productions/renpy-vscode",
  "homepage": "https://github.com/DRincs-Productions/renpy-vscode",
  "engines": {
    "vscode": "^1.77.0"
  },
  "bugs": {
    "url": "https://github.com/DRincs-Productions/renpy-vscode/issues"
  },
  "categories": [
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "workspaceContains:**/*.rpy",
    "workspaceContains:**/*.py"
  ],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "title": "Ren'Py",
      "properties": {
        "renpy.sdkPath": {
          "type": [
            "string",
            "null"
          ],
          "default": null,
          "description": "Ren'Py SDK folder path.",
          "required": [
            {
              "when": "renpy.sdkPath",
              "message": "Ren'Py SDK folder path is required."
            }
          ]
        }
      },
      "debuggers": [
        {
          "type": "renpy",
          "label": "Ren'Py Debug",
          "runtime": "renpy",
          "languages": [
            "renpy"
          ],
          "configurationAttributes": {
            "launch": {
              "required": [],
              "properties": {
                "path": {
                  "type": "string",
                  "default": "${workspaceFolder}/game",
                  "description": "Path to the game folder."
                },
                "recompile": {
                  "type": "boolean",
                  "default": false,
                  "description": "Recompile the game before running."
                }
              }
            }
          },
          "initialConfigurations": [
            {
              "type": "renpy",
              "path": "${workspaceFolder}/game",
              "recompile": true
            }
          ],
          "configurationSnippets": [
            {
              "label": "Ren'Py: Run",
              "description": "Run the game.",
              "body": {
                "type": "renpy",
                "path": "${workspaceFolder}/game"
              }
            },
            {
              "label": "Ren'Py: Recompile & Run",
              "description": "Recompile and run the game.",
              "body": {
                "type": "renpy",
                "path": "${workspaceFolder}/game",
                "recompile": true
              }
            }
          ]
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.77.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}